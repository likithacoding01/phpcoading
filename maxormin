<?php
if($_POST){
	$a=$_POST["num1"];
	$b=$_POST["num2"];
	$c=$_POST["num3"];
	if($a>$b && $a>$c)
		echo'a is max number'.$a;
	else{
		if($b>$a && $b>$c)
			echo'b is max'.$b;
		else
			echo'c is max'.$c;
	}
}


